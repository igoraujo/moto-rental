@model MotoRental.Borders.Models.Motorcycle

@{
    ViewBag.Title = "Motos";
    Layout = "_Layout";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Dispositivos/Ve√≠culos
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Cadastrar Dispositivos</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label for="PlateNumber" class="col-sm-2 control-label">Placa</label>
                    <div class="col-sm-4">
                        <input id="PlateNumber" type="text" class="form-control" name="PlateNumber" placeholder="AAA00A0" maxlength="7"
                               style="text-transform:uppercase">
                    </div>
                    <label for="Year" class="col-sm-2 control-label">Ano</label>
                    <div class="col-sm-4">
                        <input id="Year" type="number" class="form-control" name="Year" placeholder="2024" maxlength="4">
                    </div>
                </div>

                <div class="form-group">
                    <label for="Model" class="col-sm-2 control-label">Modelo</label>
                    <div class="col-sm-4">
                        <input id="Model" type="text" class="form-control" name="Model" placeholder="Honda CG 150 cc" maxlength="100">
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default" formaction="Cancel" formmethod="post">Voltar</button>
                <button type="submit" class="btn btn-info pull-right" formaction="CreateDevice"
                        formmethod="post">Cadastrar</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>
