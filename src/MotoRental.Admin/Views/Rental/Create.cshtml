@model MotoRental.Admin.Models.RentalViewModel

<section class="content-header">
    <h1>
        Aluguel
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Editar Motorista</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal">
            <div class="box-body">
                <div class="invoice p-3 mb-3">

                    <div class="row">
                        <div class="col-12">
                            <h4>
                                <i class="fas fa-globe"></i> Plano
                                <small class="float-right">@Model.Product.NumberOfDays dias</small>
                            </h4>
                        </div>
                    </div>

                    <div class="row invoice-info">
                        <div class="col-sm-12 invoice-col">
                            @Model.Product.Description
                        </div>
                    </div>

                    <div class="row">
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th style="width:50%">Diária:</th>
                                        <td>R$ @Model.Product.PricePerDay</td>
                                    </tr>
                                    <tr>
                                        <th>Multa por Atraso (@(Model.Product.IsPercent ? "%" : "R$")): </th>
                                        <td>@Model.Product.LateFee</td>
                                    </tr>
                                    <tr>
                                        <th>Quantidade de dias:</th>
                                        <td>@Model.Product.NumberOfDays</td>
                                    </tr>
                                    <tr>
                                        <th>Data Extimada de devolução:</th>
                                        <td>@Model.Rental.ExpectedEndDate</td>
                                    </tr>
                                    <tr>
                                        <th>Total:</th>
                                        <td>R$ @Model.Total</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Description" class="col-sm-2 control-label">Descrição</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Description" placeholder="UniqueId"
                               value="@Model.Product.Description" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label for="PricePerDay" class="col-sm-2 control-label">Preço por dia</label>
                    <div class="col-sm-4">
                        <input id="PricePerDay" type="text" class="form-control" name="PricePerDay" value="R$@Model.Product.PricePerDay">
                    </div>

                    <label for="LateFee" class="col-sm-2 control-label">Multa por Atraso</label>
                    <div class="col-sm-4">
                        <input id="LateFee" type="text" class="form-control" name="LateFee" value="@Model.Product.LateFee">
                    </div>
                </div>
                <div class="form-group">
                    <label for="NumberOfDays" class="col-sm-2 control-label">Quantidade de Dias</label>
                    <div class="col-sm-4">
                        <input id="NumberOfDays" type="text" class="form-control" name="NumberOfDays" value="@Model.Product.NumberOfDays">
                    </div>

                    <label for="ExpectedEndDate" class="col-sm-2 control-label">Data esperada de devolução</label>
                    <div class="col-sm-4">
                        <input id="ExpectedEndDate" type="text" class="form-control" name="ExpectedEndDate" value="@Model.Rental.ExpectedEndDate">
                    </div>
                </div>
                <div class="form-group">
                    <label for="NumberOfDays" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        @* <input id="NumberOfDays" type="text" class="form-control" name="NumberOfDays" value="@Model.Product.NumberOfDays"> *@
                    </div>

                    <label for="Total" class="col-sm-2 control-label">Total</label>
                    <div class="col-sm-4">
                        <input id="Total" type="text" class="form-control" name="Total" value="@total">
                    </div>
                </div>
                <input type="hidden" name="Id" value="@Model.Product.Id" />
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default" formaction="/@ViewBag.ControllerName/Cancel"
                        formmethod="post">
                    Voltar
                </button>
                <button type="submit" class="btn btn-info pull-right" formaction="/@ViewBag.ControllerName/UpdateDriver"
                        formmethod="post">
                    Editar
                </button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>
