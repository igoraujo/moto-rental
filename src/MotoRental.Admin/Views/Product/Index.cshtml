@model System.Collections.Generic.IEnumerable<MotoRental.Borders.Models.Product>?

@{
    ViewBag.Title = "Produto";
    Layout = "_Layout";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Gerenciar @ViewBag.Title</h3>
                </div>
                <div class="box-header">
                    <a href="@ViewBag.ControllerName/Create" class="btn btn-info pull-right">Adicionar @ViewBag.Title</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body overflow-x">
                    <table id="data-table" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Descrição</th>
                            <th>Quantidade de dias</th>
                            <th>Preço/dia</th>
                            <th>Multa</th>
                            <th>Data de Criação</th>
                            <th>Data de Atualização</th>
                            <th>Ativo</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>@Html.DisplayFor(modelItem => item.NumberOfDays)</td>
                                <td>@Html.DisplayFor(modelItem => item.PricePerDay)</td>
                                <td>
                                    @(item.IsPercent ? string.Empty : "R$ ")
                                    @item.LateFee
                                    @(item.IsPercent ? " %" : string.Empty)
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                <td>@Html.DisplayFor(modelItem => item.UpdatedAt)</td>
                                <td>
                                    <a href="@ViewBag.ControllerName/Update/@item.Id"
                                       class="btn btn-block btn-primary">Editar</a>
                                    <a href="" class="btn btn-block btn-danger" onclick="Delete('@item.Id')">Excluir</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- DataTables -->
<script src="/components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="/components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<script src="/dist/js/dataTablesConfig.js"></script>

<style>
    .on {
        color: #198754;
    }

    .off {
        color: #dc3545;
    }

    .overflow-x {
        width: auto;
        overflow-x: scroll;
        white-space: nowrap;
    }
</style>

<!-- page script -->
<script>
    function Delete(id) {
        let r = confirm("Você tem certeza que deseja excluir este produto?");
        if (r) {
            $.ajax({
                url: `@ViewBag.ControllerName/Delete/${id}`,
                type: 'DELETE',
                success: function (data) {
                    alert("Produto excluída com sucesso!");
                    window.location.reload();
                },
                error: function (data) {
                    alert("Erro ao excluir motocicleta!");
                }
            });
        }
    }
</script>
